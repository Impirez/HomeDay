<style>

    main{
        background-color: rgb(255, 255, 255);
    }

    @media screen and (max-width: 600px){
        main{
            min-width: 520px
        }
    }

    .principal-body{
        position: relative;
        background-color: transparent;
        height: 85vh;
    }

    .principal-body svg{    
        position: absolute;
        bottom: 0;
    }

    #container-text{
        width: 100%;
        text-align: center;
        padding-top: 150px;
        }

    .medio-centro{
        height: 70vh;
        background-color: #7AF682;
    }

    .medio-centro-finally{
        height: 400px;
        position: relative;
    }

    .medio-centro-finally svg{
        position: absolute;
        top: 0;
    }

    .tittle--medio-centro{
        text-align: center;
        padding-top: 20px;
    }
    
    .carts--medio-centro{
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 20px;
        height: 450px;
    }

    .cart{
        background-color: #ffff;
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
        border: 1px solid black;
        width: 300px;
        height: 350px;
        border-radius: 15px 15px 0 0;
        justify-content: space-evenly;
    }

    .wave{
        background-color: #7AF761;
        height: inherit;
        width: 100%;
    }

    .cart-informacion{
        margin-top: 15px;
    }

    #button-more{
        border-radius: 10px;
        border: none;
        background-color: beige;
    }

    @media screen and (max-width: 1300px){
        .carts--medio-centro{
            display: flex;
            flex-direction: column;
        }

        .medio-centro{
            height: 1600px
        }

        .cart{
            margin-bottom: 30px;
        }
    }
</style>